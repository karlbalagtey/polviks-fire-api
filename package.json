{
    "name": "polviks-fire-api",
    "version": "1.0.0",
    "engine": {
        "node": "12.6.0",
        "npm": "6.9.0"
    },
    "scripts": {
        "client": "npm start",
        "server": "nodemon server.js",
        "build": "npm run build",
        "dev": "concurrently --kill-others-on-fail \"npm server\" \"npm client\"",
        "start": "node server.js",
        "heroku-postbuild": "npm install && npm install --only=dev --no-shrinkwrap && npm run build"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "dotenv": "^8.0.0",
        "express": "^4.17.1",
        "compression": "1.7.4",
        "cors": "2.8.5",
        "stripe": "6.28.0"
    },
    "devDependencies": {
        "concurrently": "^4.0.1"
    }
}
